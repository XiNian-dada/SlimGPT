{
  "manifest_version": 3,
  "name": "SlimGPT",
  "version": "1.0.0",
  "description": "SlimGPT â€” Make ChatGPT fast again. Automatically collapse old messages in long chats.",
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "vendor/katex/katex.min.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/katex/katex.min.css",
        "vendor/katex/fonts/*"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ]
    }
  ]
}
